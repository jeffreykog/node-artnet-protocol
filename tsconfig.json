        "target": "es2015",
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "sourceMap": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "lib/**/*.ts",
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
